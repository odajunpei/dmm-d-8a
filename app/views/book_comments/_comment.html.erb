 <table class="table table-hover table-inverse">
<tbody>
  <% book_comments.each do |comments| %>
  <% unless comments.id.nil? %>
    <tr>
      <td>
        <%= link_to user_path(comments.user.id) do %>
        　<%= attachment_image_tag comments.user, :profile_image, size:"40x40", fallback: "no_image.jpg" %>
        <% end %>
        <br><%= link_to "#{comments.user.name}", user_path(comments.user.id) %></br>
      </td>
      <td>
        <%= comments.comment %>
      </td>
      <td>
        <% if comments.user == current_user %>
        <div class="comment_delete">
        　<%= link_to "destroy", book_book_comment_path(comments.book_id, comments.id), method: :delete, remote: true %>
        </div>
        <% end %>
      </td>
    </tr>
  <% end %>
  <% end %>
</tbody>
 </table>